<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserInfoModifyDao">


    <select id="findAllInfo" resultType="UserInfoModify">
        select * from t_user where id=#{id}
    </select>

    <update id="modifyInfo">
        update t_user set nickname = #{nickname},email = #{email},update_time=#{updateTime} where id = #{id}
    </update>

    <update id="modifyAvatar">
        update t_user set avatar = #{avatar} where id = #{id}
    </update>
</mapper>